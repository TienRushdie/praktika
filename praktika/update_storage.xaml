        <TextBox HorizontalAlignment="Left" Name="T1" Margin="85,15,0,0" TextWrapping="Wrap" Text=""  VerticalAlignment="Top" Width="153" FontFamily="Cascadia Mono SemiBold" Foreground="Black" Height="26" Grid.Column="1"/>
